<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%></title>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container" style="height: 100vh;">
        <div class="columns">
            <div class="column is-two-thirds">

                <div class="modal" id="modal">
                    <div class="modal-background"></div>
                    <div class="modal-card">
                        <header class="modal-card-head">
                            <p class="modal-card-title">Add New Player</p>
                            <button class="delete" aria-label="close"></button>
                        </header>
                        <section class="modal-card-body">
                            <div class="column">
                                <form method="post">
                                    <div class="field">
                                        <label class="label">Name</label>
                                        <div class="control">
                                            <input class="input" name="name" type="text" placeholder="Input name"
                                                required onblur="trimInput()">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Image</label>
                                        <div class="control">
                                            <input class="input" name="image" type="text"
                                                placeholder="Input image" required onblur="trimInput()">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Club</label>
                                        <div class="control">
                                            <input class="input" name="club" type="text"
                                                placeholder="Input club" required onblur="trimInput()">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Position</label>
                                        <div class="control">
                                            <select name="position" class="input" required>
                                                <option value="Goalkeeper">Goalkeeper</option>
                                                <option value="Defender">Defender</option>
                                                <option value="Midfielder">Midfielder</option>
                                                <option value="Forward">Forward</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Goals</label>
                                        <div class="control">
                                            <input class="input" name="goals" type="number"
                                                placeholder="Input Goals" required onblur="trimInput()">
                                        </div>
                                    </div>
                                    
                                    <div class="field">
                                        <label class="checkbox">
                                            <span style="font-weight: bold;">Captain</span>
                                            <span class="control">
                                                <input type="checkbox" name="isCaptain" id="isCaptain">
                                            </span>
                                        </label>
                                    </div>
                                    <div class="field is-grouped">
                                        <div class="control">
                                            <button class="button is-link" type="submit">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>

                <button class="button is-primary modal-button js-modal-trigger" data-target="modal"
                    aria-haspopup="true">Add New Player</button>

                <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
                    <thead>
                        <tr>
                            <th><abbr title="name">Name</abbr></th>
                            <th><abbr title="image">Image</abbr></th>
                            <th><abbr title="club">Club</abbr></th>
                            <th><abbr title="position">Position</abbr></th>
                            <th><abbr title="goals">Goals</abbr></th>
                            <th><abbr title="captain">Captain</abbr></th>
                            <th><abbr title="Action">Action</abbr></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% playerData.forEach(function(player, index){ %>

                            <tr>
                                <td>
                                    <%= player.name %>
                                </td>
                                <td>
                                    <img src="<%= player.image %>" alt="<%= player.name %>" width="100px"
                                        height="100px"/>
                                </td>
                                <td>
                                    <%= player.club %>
                                </td>
                                <td>
                                    <%= player.position %>
                                </td>
                                <td>
                                    <%= player.goals %>
                                </td>
                                <td>
                                    <%= player.isCaptain? "Yes" : "No" %>
                                </td>
                                <td>
                                    <button class="button is-primary" onclick="showHide('<%= index%>')" id="activeActionButton<%= index%>">Show Action</button>
                                    <div id="actionButton<%= index%>" style="display: none;">
                                        <a href="<%= baseURL%>/edit/<%= player._id%>"><button
                                                class="button is-warning">Edit</button></a>
                                        <a href="<%= baseURL%>/delete/<%= player._id%>"><button
                                                class="button is-danger" onclick="return confirm('Confirm to delete?')">Delete</button></a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>